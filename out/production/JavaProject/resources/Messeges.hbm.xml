<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entities.Messeges" table="messeges" schema="projectdb">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="reportsId">
            <column name="reports_id" sql-type="int(11)"/>
        </property>
        <property name="date">
            <column name="date" sql-type="datetime"/>
        </property>
        <property name="sender">
            <column name="sender" sql-type="int(11)"/>
        </property>
        <property name="message">
            <column name="message" sql-type="text"/>
        </property>
    </class>
</hibernate-mapping>